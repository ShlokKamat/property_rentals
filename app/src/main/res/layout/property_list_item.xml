<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/property_photo_row"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/off_white"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/property_photo_row"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/row_item_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bhk_type_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 BHK"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Flat in " />

                <TextView
                    android:id="@+id/apartment_name_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balaji Complex"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" for Rent" />
            </LinearLayout>

            <TextView
                android:id="@+id/locality_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_item_header"
                android:maxLines="2"
                android:text="Hoodi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@id/locality_row"
                android:id="@+id/size_furnish_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/property_size_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 sq ft" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" – " />

                <TextView
                    android:id="@+id/furnishing_type_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semi Furnished" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/locality_row"
                android:layout_below="@id/row_item_header"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:text="Rent "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/expected_rent_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locality_row"
                android:layout_alignParentEnd="true"
                android:text="₹ 15000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>